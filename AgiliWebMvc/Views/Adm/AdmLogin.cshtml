@model AgiliWebMvc.Models.Adm
@{
    ViewData["Title"] = "AdmLogin";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AdmLogin">
            <div class="form-group">
                <label asp-for="cpf_adm" class="control-label">CPF</label>
                <input asp-for="cpf_adm" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="senha_adm" class="control-label">SENHA</label>
                <input asp-for="senha_adm" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>