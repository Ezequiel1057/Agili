@model AgiliWebMvc.Models.Restaurantes
@{
    ViewData["Title"] = "EditRestaurante";
}

<h2>EditRestaurante</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRestaurante">
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="nome_rest" class="control-label">NOME</label>
                <input asp-for="nome_rest" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="cnpj_rest" class="control-label">CNPJ</label>
                <input asp-for="cnpj_rest" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="telefone_rest" class="control-label">TELEFONE</label>
                <input asp-for="telefone_rest" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="endereco_rest" class="control-label">ENDERECO</label>
                <input asp-for="endereco_rest" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="senha_rest" class="control-label">SENHA</label>
                <input asp-for="senha_rest" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<a asp-action="Index">Voltar</a>