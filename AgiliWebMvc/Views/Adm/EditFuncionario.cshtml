@model AgiliWebMvc.Models.Funcionarios
@{
    ViewData["Title"] = "EditFuncionario";
}

<h2>Editar Funcionario</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="EditFuncionario">
            <input type="hidden" asp-for="id"/>
            <div class="form-group">
                <label asp-for="nome_func" class="control-label">NOME</label>
                <input asp-for="nome_func" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="cpf_func" class="control-label">CPF</label>
                <input asp-for="cpf_func" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="senha_func" class="control-label">SENHA</label>
                <input asp-for="senha_func" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>