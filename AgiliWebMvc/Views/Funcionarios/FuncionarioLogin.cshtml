@model AgiliWebMvc.Models.Funcionarios
@{
    ViewData["Title"] = "FuncionarioLogin";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="FuncionarioLogin">
            <div class="form-group">
                <label asp-for="cpf_func" class="control-label">CPF</label>
                <input asp-for="cpf_func" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="senha_func" class="control-label">SENHA</label>
                <input asp-for="senha_func" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Entrar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>